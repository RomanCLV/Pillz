{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    // Recommandés
    "allowJs": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    // Pour les imports d'assets (.png, .svg…)
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "jsx": "react-native",

    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@themedComponents/*": ["components/themedComponents/*"],
      "@constants/*": ["constants/*"],
      "@screens/*": ["screens/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["./", "typings/**/*.d.ts"]
}
